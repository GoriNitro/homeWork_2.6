<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img"
    tools:context=".MainActivity">
    <EditText
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintBottom_toTopOf="@id/button"
        android:layout_marginBottom="15dp"
        android:paddingStart="15dp"
        android:hint="Введите пароль"
        android:layout_marginHorizontal="23dp"
        android:background="@drawable/bg_textviev"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        />
    <EditText
        android:id="@+id/text3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintBottom_toTopOf="@id/text2"
        android:layout_marginBottom="15dp"
        android:paddingStart="15dp"
        android:hint="Введите вашу почту"
        android:layout_marginHorizontal="23dp"
        android:background="@drawable/bg_textviev"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/mik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Забыли пароль?"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/mik1"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="45dp"
        />
    <TextView
        android:id="@+id/mik1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Нажмите сюда"
        android:textColor="@color/yellow"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/mik"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="45dp"
        app:layout_constraintEnd_toEndOf="parent"/>

<com.google.android.material.button.MaterialButton
    android:id="@+id/button"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    app:layout_constraintBottom_toTopOf="@id/mik"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:background="@drawable/bg_bit"
    android:text="@string/log_in"
    android:textColor="@color/white"
    android:layout_marginHorizontal="23dp"
    android:layout_marginBottom="23dp"
    />
    <TextView
        android:id="@+id/txt3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Вход"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Добро пожаловать"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="35sp"
        android:textColor="@color/white"
        />
    <TextView
        android:id="@+id/txt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Выполните вход или зарегестрируйтесь"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/txt"
        android:textSize="25sp"
        android:textColor="@color/white"
        />

</androidx.constraintlayout.widget.ConstraintLayout>